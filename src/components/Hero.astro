---
// Hero.astro - Sincronizado con GitHub
const GITHUB_USERNAME = 'ivanmayoraldev';

interface GitHubUser {
  name: string;
  bio: string;
  location: string;
  blog: string;
  avatar_url: string;
  twitter_username: string;
  html_url: string;
}

// Fetch datos del usuario desde GitHub
let userData: GitHubUser | null = null;

try {
  const response = await fetch(`https://api.github.com/users/${GITHUB_USERNAME}`);
  if (response.ok) {
    userData = await response.json();
  }
} catch (error) {
  console.error('Error fetching GitHub data:', error);
}

// Fallback si no hay datos
const displayName = userData?.name || "Iván Mayoral Capel";
const displayBio = userData?.bio || "Backend Developer | Python · FastAPI • PostgreSQL | AWS • Docker | Clean Architecture • Scalable APIs & Microservices";
const displayLocation = userData?.location || "Madrid, España";
const displayWebsite = userData?.blog || "https://ivan-mayoral.vercel.app";
const avatarUrl = userData?.avatar_url || "/logo.jpg";
---

<div class="flex flex-col justify-start text-center pt-4" id="home">
  <!-- Avatar con efecto -->
  <div class="relative mb-4 w-full flex justify-center">
    <div
      class="absolute inset-0 bg-gradient-to-br from-yellow-400 via-yellow-500 to-orange-500 dark:from-yellow-400 dark:via-orange-400 dark:to-red-500 rounded-full blur-2xl opacity-30 animate-pulse scale-110"
    >
    </div>
    <img
      class="relative rounded-full shadow-xl size-32 sm:size-40 ring-2 ring-white dark:ring-gray-800 transition-all duration-300 hover:scale-105"
      src={avatarUrl}
      alt={displayName}
    />
  </div>

  <!-- Nombre -->
  <h1
    class="text-center text-3xl sm:text-4xl font-bold tracking-tight text-white leading-tight mb-2"
  >
    {displayName}
  </h1>

  <!-- Título profesional desde GitHub bio -->
  <p
    class="text-center text-lg sm:text-xl font-semibold text-transparent bg-clip-text bg-gradient-to-r from-yellow-600 to-orange-600 dark:from-yellow-400 dark:to-orange-400 mb-4"
  >
    {displayBio.split('|')[0].trim()}
  </p>

  <!-- Descripción expandida -->
  <div class="max-w-xl mx-auto space-y-2 mb-6">
    <p class="text-sm sm:text-base text-gray-300 leading-relaxed">
      <strong class="text-gray-100">23 años, {displayLocation}.</strong>
      Apasionado por el <strong class="text-yellow-400">desarrollo backend</strong> y la creación de 
      <strong class="text-yellow-400">APIs robustas y escalables</strong>. Especializado en 
      <strong class="text-yellow-400">Python, Django y PostgreSQL</strong>, con experiencia en 
      <strong class="text-yellow-400">desarrollo de módulos custom para Odoo ERP</strong> y principios de 
      <strong class="text-yellow-400">Clean Architecture, AWS y Docker</strong>.
    </p>

    <p class="text-sm sm:text-base text-gray-400 leading-relaxed">
      Graduado en <strong class="text-gray-300">DAW</strong>, cursando <strong class="text-gray-300">DAM</strong> y en 2026 comenzaré 
      <strong class="text-gray-300">Ingeniería Informática</strong> especializado en <strong class="text-gray-300">Ingeniería de Software</strong>.
    </p>
  </div>

  <!-- Botones de acción -->
  <div class="flex flex-col sm:flex-row justify-center gap-3">
    <!-- Badge disponible -->
    <div class="inline-flex items-center gap-2 px-4 py-2 bg-green-500/90 text-white text-sm font-semibold rounded-full shadow-lg">
      <span class="relative flex h-2 w-2">
        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-white opacity-75"></span>
        <span class="relative inline-flex rounded-full h-2 w-2 bg-white"></span>
      </span>
      Disponible
    </div>

    <!-- Botones principales -->
    <div class="flex flex-wrap justify-center gap-3">
      <!-- Botón CV -->
      <a
        href="/cv.pdf"
        download="Ivan_Mayoral_Capel_CV.pdf"
        class="inline-flex items-center gap-1.5 px-4 py-2 bg-gradient-to-r from-purple-600 to-purple-700 hover:from-purple-700 hover:to-purple-800 text-white text-sm font-semibold rounded-full transition-all duration-300 hover:scale-105 shadow-lg"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        CV
      </a>

      <!-- Botón LinkedIn -->
      <a
        href="https://linkedin.com/in/ivanmayoraldev"
