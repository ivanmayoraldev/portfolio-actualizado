---
import GitHub from "./icons/GitHub.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import Code from "./icons/Code.astro"

const PROJECTS = [
  {
    title: "En desarrollo",
    description:
      "En Desarrollo. Próximamente más información sobre este proyecto.",
    link: " ",
    github: " ",
    image: "/projects/svgl.webp"
  },
  {
    title: "En Desarrollo",
    description:
      "En Desarrollo. Próximamente más información sobre este proyecto.",
    link: " ",
    image: "/projects/adventjs.webp"
  },
]
---

<div class="flex flex-col gap-y-12 md:gap-y-20 lg:gap-y-24 px-4 sm:px-6">
  <h2 class="flex items-center gap-x-3 text-3xl sm:text-4xl font-bold text-gray-800 dark:text-white mb-6">
    <Code class="size-8 sm:size-10" />
    Proyectos
  </h2>
  {
    PROJECTS.map(({ image, title, description, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-6 md:space-y-8 group md:flex-row md:space-x-8">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img 
        class="object-cover object-top w-full h-48 sm:h-56 md:h-full transition duration-500 md:scale-110 md:group-hover:scale-105 blur-md" 
        loading="lazy" 
        src={image} 
        alt={title}
      />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg px-2 md:px-0">
    <h3 class="text-xl sm:text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <div class="mt-2 text-sm sm:text-base text-gray-700 dark:text-gray-400 leading-relaxed">
        {description}
      </div>
      <footer class="inline-block sm:flex sm:flex-row items-start sm:items-center justify-start mt-4 gap-3 sm:gap-x-4 w-full mb-5">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-5 sm:size-6" />
              Code
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4 sm:size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>