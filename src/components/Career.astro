<script>
    document.addEventListener("astro:page-load", () => {
        const tabButtons = document.querySelectorAll(".tab-nav");
        const tabContents = document.querySelectorAll(".tab-content");

        function showTab(tabName: string) {
            // Ocultar todos los contenidos
            tabContents.forEach(content => {
                content.classList.add("hidden");
            });

            // Mostrar el contenido seleccionado
            const activeContent = document.querySelector(`.tab-content[data-tab="${tabName}"]`);
            if (activeContent) {
                activeContent.classList.remove("hidden");
            }

            // Actualizar botones
            tabButtons.forEach(button => {
                const btnTab = button.getAttribute("data-tab");
                if (btnTab === tabName) {
                    button.classList.remove("backdrop-blur-xl", "bg-white/5", "border-white/10", "text-gray-400");
                    button.classList.add("bg-gradient-to-br", "from-blue-500/20", "to-blue-600/20", "border-blue-500/30", "text-blue-300");
                } else {
                    button.classList.remove("bg-gradient-to-br", "from-blue-500/20", "to-blue-600/20", "border-blue-500/30", "text-blue-300");
                    button.classList.add("backdrop-blur-xl", "bg-white/5", "border-white/10", "text-gray-400");
                }
            });
        }

        // Event listeners para los botones
        tabButtons.forEach(button => {
            button.addEventListener("click", () => {
                const tabName = button.getAttribute("data-tab");
                if (tabName) {
                    showTab(tabName);
                }
            });
        });

        // Mostrar el primer tab por defecto
        showTab("projects");
    });
</script>

