---
import Layout from "@/layouts/Layout.astro";
import Hero from "@/components/Hero.astro";
import TechStack from "@/components/TechStack.astro";
import Career from '@/components/Career.astro';
---

<Layout title="Iván Mayoral - Backend Developer" description="Portfolio de Iván Mayoral">
  <div class="min-h-screen bg-gray-950">
    <div class="max-w-7xl mx-auto p-6 py-12">
      <!-- Two Column Layout: Hero + Career Sections -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 h-[95vh]">

        <!-- Left Column: Hero + TechStack -->
        <div class="flex flex-col gap-6 h-full overflow-hidden">
          <!-- Hero Section -->
          <div class="bg-gray-900 rounded-2xl p-6 pt-12 shadow-2xl border border-gray-800 flex-shrink-0">
            <Hero />
          </div>

          <!-- TechStack Section -->
          <div class="flex-shrink-0">
            <TechStack />
          </div>
        </div>

        <!-- Right Column: Career with Activity Dashboard -->
        <div class="bg-gray-900 rounded-2xl p-6 shadow-2xl border border-gray-800 h-full overflow-hidden">
          <Career />
        </div>

      </div>
    </div>
  </div>
</Layout>