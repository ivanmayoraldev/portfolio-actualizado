---
import Layout from "@/layouts/Layout.astro";
import Hero from "@/components/Hero.astro";
import Career from '@/components/Career.astro';
---

<Layout title="Iván Mayoral - Backend Developer" description="Portfolio de Iván Mayoral">
  <div class="min-h-screen bg-gray-950 relative overflow-hidden">
    <!-- Efectos de fondo optimizados -->
    <div class="fixed inset-0 pointer-events-none">
      <div class="absolute top-0 left-1/4 w-96 h-96 bg-blue-500/8 rounded-full blur-3xl animate-float"></div>
      <div class="absolute top-1/3 right-1/4 w-[500px] h-[500px] bg-purple-500/8 rounded-full blur-3xl animate-float-delayed"></div>
      <div class="absolute bottom-1/4 left-1/3 w-[400px] h-[400px] bg-yellow-500/8 rounded-full blur-3xl animate-float-slow"></div>
      
      <!-- Grid pattern sutil -->
      <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.015)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.015)_1px,transparent_1px)] bg-[size:40px_40px] [mask-image:radial-gradient(ellipse_80%_50%_at_50%_50%,black,transparent)]"></div>
    </div>

    <div class="relative max-w-6xl mx-auto px-4 sm:px-6 py-6 sm:py-8 space-y-6">

      <!-- Hero Section compacta -->
      <section class="group relative bg-gradient-to-br from-gray-900/70 to-gray-900/30 backdrop-blur-xl rounded-2xl p-5 sm:p-6 shadow-2xl border border-white/10 hover:border-white/20 transition-all duration-500 overflow-hidden">
        <div class="absolute top-0 left-1/2 -translate-x-1/2 w-2/3 h-px bg-gradient-to-r from-transparent via-blue-400/40 to-transparent"></div>
        <div class="absolute top-0 right-0 w-48 h-48 bg-gradient-to-br from-yellow-500/5 to-transparent rounded-full blur-2xl group-hover:scale-125 transition-transform duration-700"></div>
        <div class="absolute bottom-0 left-0 w-48 h-48 bg-gradient-to-tr from-blue-500/5 to-transparent rounded-full blur-2xl group-hover:scale-125 transition-transform duration-700"></div>
        
        <div class="relative">
          <Hero />
        </div>
      </section>

      <!-- Career Section compacta -->
      <section class="group relative bg-gradient-to-br from-gray-900/70 to-gray-900/30 backdrop-blur-xl rounded-2xl p-5 sm:p-6 shadow-2xl border border-white/10 hover:border-white/20 transition-all duration-500 overflow-hidden">
        <div class="absolute top-0 left-1/2 -translate-x-1/2 w-2/3 h-px bg-gradient-to-r from-transparent via-purple-400/40 to-transparent"></div>
        <div class="absolute top-0 left-0 w-48 h-48 bg-gradient-to-br from-purple-500/5 to-transparent rounded-full blur-2xl group-hover:scale-125 transition-transform duration-700"></div>
        <div class="absolute bottom-0 right-0 w-48 h-48 bg-gradient-to-tl from-pink-500/5 to-transparent rounded-full blur-2xl group-hover:scale-125 transition-transform duration-700"></div>
        
        <div class="relative">
          <Career />
        </div>
      </section>
    </div>
  </div>
</Layout>

<style>
  @keyframes float {
    0%, 100% { 
      transform: translate(0, 0) scale(1);
    }
    33% { 
      transform: translate(30px, -30px) scale(1.1);
    }
    66% { 
      transform: translate(-20px, 20px) scale(0.9);
    }
  }

  @keyframes float-delayed {
    0%, 100% { 
      transform: translate(0, 0) scale(1);
    }
    33% { 
      transform: translate(-30px, 30px) scale(0.9);
    }
    66% { 
      transform: translate(20px, -20px) scale(1.1);
    }
  }

  @keyframes float-slow {
    0%, 100% { 
      transform: translate(0, 0) scale(1);
    }
    50% { 
      transform: translate(15px, 15px) scale(1.05);
    }
  }

  .animate-float {
    animation: float 20s ease-in-out infinite;
  }

  .animate-float-delayed {
    animation: float-delayed 25s ease-in-out infinite;
  }

  .animate-float-slow {
    animation: float-slow 30s ease-in-out infinite;
  }

  html {
    scroll-behavior: smooth;
  }

  @media (max-width: 768px) {
    html {
      scroll-padding-top: 1.5rem;
    }
  }
</style>